
@page
@model Sator.App.Presentacion.Pages.cartaModel
@{
}
<link rel="stylesheet" href="~/css/site.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Añadir Producto
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Añadir Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
  <div class="mb-3">
    <label  class="form-label">Nombre</label>
    <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  </div>
  <div class="mb-3">
    <label  class="form-label">Descripcion</label>
    <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  </div>
  <div class="mb-3">
    <label  class="form-label">Tipo de Producto</label>
    <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  </div>
  <div>
    <button class="btn btn-primary" onclick="newIngrediente()">Agregar</button>
    
    <form>
    @for (var i = 0; i < Model.ingrediente.Count; i++)
        {
          var indice = i;
          var ingre = Model.ingrediente[i];
            <div class="mb-3">
              <label  class="form-label" asp-for="@ingre.descripcion">Nombre Ingrediente</label>
              <input  asp-for="@ingre.descripcion" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              <span class="text-danger" asp-validation-for="@ingre.descripcion"></span>
            </div>
            <div class="mb-3">
              <label  class="form-label" asp-for="@ingre.cantidad">Cantidad Ingrediente</label>
              <input  asp-for="@ingre.cantidad" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
              <span class="text-danger" asp-validation-for="@ingre.cantidad"></span>
            </div>
            <!--<button type="submit" class="btn btn-primary" >Agregar</button>
            <div id="emailHelp" class="form-text">Agrega mas de un Ingredient.</div>-->
          
        }
    </form>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>


@foreach (var producto in Model.producto_list)
{
	<div class="card" style="width: 18rem;" id="item">
		<img src="..." class="card-img-top" alt="...">
		<div class="card-body">
			<h5 class="card-title">@producto.nombre</h5>
			<p class="card-text">@producto.descripcion</p>
			<!--<a href="exampleModal" class="btn btn-warning btn-lg" data-toggle="modal" >Agregar</a>-->
			<!--<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop" asp-route-producto="@producto" asp-page="Ventana">
    			Agregar
  			</button>-->
			<a class="btn btn-primary table-btn" asp-page="Ventana" asp-route-productoId="@producto.id">
                Agregar
            </a>
		</div>
	</div>
}